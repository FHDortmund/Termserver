<?xml version="1.0" encoding="UTF-8"?>

<zk xmlns="http://www.zkoss.org/2005/zul">
  <?init class="org.zkoss.zkplus.databind.AnnotateDataBinderInit" root="./winUserDetails"?>

  <window id="winUserDetails" title="Benutzer-Daten" width="600px"  height="175px" border="normal"
          use="de.fhdo.gui.main.masterdata.UserDetails" closable="true"
          sizable="true">
    <borderlayout>
      <center border="0">
        <grid>
          <columns>
            <column width="130px" align="right" label=""/>
            <column label=""/>
          </columns>
          <rows>
            <row>
              <label value="Benutzername:"/>
              <textbox width="97%" value="@{winUserDetails.user.name}" id="tb_Benutzername"
                       readonly="true" sclass="mandatory"/>
            </row>
            <row>
              <label value="Email:"/>
              <textbox width="97%" value="@{winUserDetails.user.email}" id="tb_Email"
                       readonly="false" sclass="mandatory"/>
            </row>
            
            <!--<row>
              <label value="Administrator:"/>
              <checkbox disabled="false"
                   checked="@{winUserDetails.user.isAdmin}"/>
            </row>-->

            <!--<row>
              <label value="Name:"/>
              <textbox width="97%" value="@{winUserDetails.user.userName}"/>
            </row>-->
            
            <row id="row_Passwort">
              <label value="Passwort:"/>
              <button id="buttonPW" label="Passwort Ã¤ndern" onClick="winUserDetails.changePassword()"/>
            </row>

          </rows>
        </grid>
      </center>
      <south height="30px" border="0" collapsible="true">
        <div align="right">
          <button label="OK" onClick="winUserDetails.onOkClicked()" autodisable="self" />
          <button label="Abbrechen" onClick="winUserDetails.onCancelClicked()" autodisable="self" />
        </div>
      </south>
    </borderlayout>
  </window>
</zk>
